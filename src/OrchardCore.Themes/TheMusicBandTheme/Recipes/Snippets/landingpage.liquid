{% zone "Header" %}
<!-- Header -->
<section id="promo" class="promo-section section">
    <div class="promo-carousel-holder">
        <div id="promo-carousel" class="promo-carousel carousel slide carousel-fade" data-bs-ride="carousel">
            <div class="carousel-inner carousel-zoom">
                <div class="carousel-item slide-1 active" 
                style="background:url('{{Model.ContentItem.Content.LandingPage.BackgroundImage1.Paths.first | asset_url}}') no-repeat center center;background-size:cover">
                    <div class="d-flex align-items-center justify-content-center min-vh-100" >
                       
                    </div>
                </div>
                {%if Model.ContentItem.Content.LandingPage.BackgroundImage2 %}
                <div class="carousel-item slide-2" data-bs-interval="6000" 
                style="background:url('{{Model.ContentItem.Content.LandingPage.BackgroundImage2.Paths.first | asset_url}}') no-repeat center center;background-size:cover">
                    <div class="d-flex align-items-center justify-content-center min-vh-100">
                       
                    </div>
                </div>
                {% endif %}
                
                {%if Model.ContentItem.Content.LandingPage.BackgroundImage3 %}
                <div class="carousel-item slide-3" data-bs-interval="6000" 
                style="background:url('{{Model.ContentItem.Content.LandingPage.BackgroundImage3.Paths.first | asset_url}}') no-repeat center center;background-size:cover">
                    <div class="d-flex align-items-center justify-content-center min-vh-100">
                       
                    </div>
                </div>
                {% endif %}

                {%if Model.ContentItem.Content.LandingPage.BackgroundImage4 %}
                <div class="carousel-item slide-4" data-bs-interval="6000" 
                style="background:url('{{Model.ContentItem.Content.LandingPage.BackgroundImage4.Paths.first | asset_url}}') no-repeat center center;background-size:cover">
                    <div class="d-flex align-items-center justify-content-center min-vh-100">
                       
                    </div>
                </div>
                {% endif %}

                {%if Model.ContentItem.Content.LandingPage.BackgroundImage5 %}
                <div class="carousel-item slide-5" data-bs-interval="6000" 
                style="background:url('{{Model.ContentItem.Content.LandingPage.BackgroundImage5.Paths.first | asset_url}}') no-repeat center center;background-size:cover">
                    <div class="d-flex align-items-center justify-content-center min-vh-100">
                       
                    </div>
                </div>
                {% endif %}

                {%if Model.ContentItem.Content.LandingPage.BackgroundImage6 %}
                <div class="carousel-item slide-6" data-bs-interval="6000" 
                style="background:url('{{Model.ContentItem.Content.LandingPage.BackgroundImage6.Paths.first | asset_url}}') no-repeat center center;background-size:cover">
                    <div class="d-flex align-items-center justify-content-center min-vh-100">
                       
                    </div>
                </div>
                {% endif %}
            </div>
        </div><!--//promo-carousel-->
    </div><!--//promo-carousel-holder-->
    <div class="overlay-mask"></div>
    <div class="container text-center promo-content">
        <div class="upper-wrapper">
            <h1 class="logo-holder" 
            style="background-image:url('{{Model.ContentItem.Content.LandingPage.Logo.Paths.first | asset_url}}')"></h1>
            <h2 class="headline">{{Model.ContentItem | display_text}}</h2>
            <div class="tagline">{{Model.ContentItem.Content.LandingPage.Subtitle.Text}}</div>
        </div>
    </div><!--//container-->
    {% if Model.ContentItem.Content.CarousalAds.ContentItems.size > 0 %}
    <div class="updates-block">        
        <div class="container updates-block-inner">
            <div id="carousel-updates" class="carousel slide" data-bs-ride="carousel" data-bs-interval="6000">
                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    {% for carouselAd in Model.ContentItem.Content.CarousalAds.ContentItems %}                    
                    {%if Model.ContentItem.Content.CarousalAds.ContentItems.first == carouselAd %}
                    <div class="carousel-item active">
                    {% else %}
                    <div class="carousel-item">
                    {% endif %}
                        <div class="carousel-content no-media-holder">
                            <h3 class="title">{{carouselAd.DisplayText}}</h3>
                            <div class="desc">
                                <p class="intro">
                                    {{carouselAd.CarouselAd.Subtitle.Text}}
                                </p><!--//intro-->
                            </div><!--//desc-->
                            <a class="btn btn-primary btn-cta" href="{{carouselAd.CarouselAd.MoreInfoLink.Url}}">
                                {{carouselAd.CarouselAd.MoreInfoLink.Text}}
                            </a>
                        </div><!--//content-container-->
                    </div><!--//item-->                    
                    {% endfor %}
                </div><!--//carousel-inner-->
            
                <!-- Controls -->
                <a class="carousel-control-prev" href="#carousel-updates" role="button" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel-updates" role="button" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div><!--//carousel-updates-->            
        </div><!--//container-->
    </div><!--//updates-block-->
    {% endif %}

</section><!--//promo-section-->
{% endzone %}

<section id="gigs" class="gigs-section section">
    <div class="container">
        {% if Model.ContentItem.Content.Gigs.ContentItems.size > 0 %}
        <h2 class="section-title text-center">Upcoming Gigs</h2>
        <div class="gigs-container">
            {% for musicGig in Model.ContentItem.Content.Gigs.ContentItems %}
            <div class="item">
                <div class="date-label">
                    <div class="number">{{musicGig.MusicGig.EventDate.Value | local | date: "%d"}}</div>
                    <div class="month">{{musicGig.MusicGig.EventDate.Value | local | date: "%b"}}</div>
                </div><!--//date-label-->
                <div class="gig-info">
                    <div class="info-content">
                        <h3 class="gig-title">
                            {{musicGig.DisplayText}}
                        </h3>
                        <div class="meta">
                            <ul class="meta-list list-inline">
                                <li class="list-inline-item location">
                                    <i class="fas fa-map-marker-alt"></i><a href="#">{{musicGig.MusicGig.ConcertHall.Text}}, {{musicGig.MusicGig.City.Text}}</a>
                                </li>
                                <li class="list-inline-item time">
                                    <i class="far fa-clock"></i>{{musicGig.MusicGig.EventTime.Value}}, {{musicGig.MusicGig.EventDate.Value | local| date: "%a"}}
                                </li>
                            </ul>
                        </div><!--//meta-->
                    </div><!--//info-content-->
                    <div class="gig-actions">
                        <a class="btn btn-xs btn-ghost-secondary" data-bs-toggle="collapse" href="#info-extra-1" aria-expanded="false" aria-controls="info-extra-1" >
                            More Info
                        </a>
                         <a class="btn btn-xs btn-secondary" href="{{musicGig.MusicGig.Store.Url}}">
                             {{musicGig.MusicGig.Store.Text}}
                        </a>
                    </div><!--//gig-actions-->
                    <div id="info-extra-1" class="collapse info-extra">
                        {{musicGig.MusicGig.Description.Text}}
                    </div>
                </div><!--//info-extra-->
            </div><!--//item-->
            {% endfor %}                
        </div><!--//gigs-container-->
        {% endif %}
        {% if Model.ContentItem.Content.MusicGigOffer.ContentItems.size > 0 %}
            <div class="gigs-contact text-center">
                <h4 class="title">{{Model.ContentItem.Content.MusicGigOffer.ContentItems.first.DisplayText}}</h4>
                <p class="intro center-block">{{Model.ContentItem.Content.MusicGigOffer.ContentItems.first.HtmlBodyPart.Html | raw}}</p>
                <a class="btn btn-ghost-primary scrollto" href="#contact">Get in touch now</a>
            </div><!--//gigs-->
        {% endif %}
    </div><!--//container-->
</section><!--//gigs-section-->

<section id="music" class="music-section section text-center">
    <div class="container">
        <h2 class="section-title">Music</h2>
        {% if Model.ContentItem.Content.SongFrames.ContentItems.size > 0 %}       
        <div class="sc-block ms-auto me-auto">
            {% for songFrame in Model.ContentItem.Content.SongFrames.ContentItems %}
            <div class="item">
                <iframe width="100%" height="166" scrolling="no" frameborder="no" src="{{songFrame.SongFrame.iFrameWebAddress.Url}}"></iframe>
            </div><!--//item-->
            {% endfor %}            
        </div>
        {% else %}
        <div class="sc-block ms-auto me-auto">           
            <div class="item">
                <h4 class="title">New Songs Coming Soon!!</h4>
            </div><!--//item-->            
        </div>
        {% endif %}<!--//sc-block-->
        {% if Model.ContentItem.Content.Albums.ContentItems.size > 0 %}
        <div class="albums-block">
            <div class="row">
                {% for album in Model.ContentItem.Content.Albums.ContentItems %}
                <div class="item col-6 col-lg-4">
                    <div class="item-inner">
                         <h3 class="album-title">
                            {{album.Album.Title.Text}}
                        </h3>
                        <div class="cover-holder">
                            
                            <a class="cover-figure" href="#">
                                <div class="arrow-holder"></div>
                                <div class="record-holder">
                                    <img class="img-fluid" 
                                    src="{{'~/TheMusicBandTheme/assets/images/record.png' | href}}" alt="" />
                                </div>
                                <img class="cover-image img-fluid" src="{{ album.Album.Image.Paths.first | asset_url }}" alt="">
                                <div class="cover-label">{{album.Album.Label.Text}}</div><!--//cover-label-->
                            </a><!--//cover-figure-->
                            <div>
                                <a href="{{album.Album.Store.Url}}" class="btn btn-sm btn-ghost-secondary">{{album.Album.Store.Text}}</a>
                            </div>
                           
                        </div><!--//cover-holder-->
                        
                        
                    </div><!--//item-inner-->
                </div><!--//item-->
                {% endfor %}                
            </div><!--//row-->
        </div>
        {% else %}
        <div class="sc-block ms-auto me-auto">           
            <div class="item">
                <h4 class="title">New Albums Coming Soon!!</h4>
            </div><!--//item-->            
        </div><!--//albums-block-->
        {% endif %}
        <div class="music-action">
            <a class="btn btn-ghost-primary" href="{{Model.ContentItem.Content.LandingPage.LinktoMusiconiTunes.Url}}">
                {{Model.ContentItem.Content.LandingPage.LinktoMusiconiTunes.Text}}
            </a>
        </div>
    </div><!--//container-->
</section><!--//music-section-->

<section id="about" class="about-section section text-center">
    <div class="container">
        <h2 class="section-title">About</h2>
        <div class="section-intro ms-auto me-auto">{{Model.ContentItem.Content.About.ContentItems.first.HtmlBodyPart.Html | raw }}</div>
        {% if Model.ContentItem.Content.TeamMembers.ContentItems.size > 0 %}  
        <div class="members-block">
            <div class="row">
                {% for teamMember in Model.ContentItem.Content.TeamMembers.ContentItems %}
                <div class="item col-6 col-lg-3">
                    <div class="item-inner">
                        <div class="member-profile">
                            <img class="img-fluid" src="{{teamMember.TeamMember.Picture.Paths.first | asset_url}}" alt="">
                        </div><!--//member-profile-->
                        <div class="member-label"> {{teamMember.TeamMember.Occupation.Text}}</div>
                        <h3 class="member-name">
                            {{teamMember.DisplayText}}
                        </h3>
                        <div class="member-desc">
                            {{teamMember.TeamMember.Description.Text}}
                        </div>
                    </div><!--//item-inner-->
                </div>                
                {% endfor %}<!--//item-->                
            </div><!--//row-->
        </div>
        {% endif %}<!--//members-block-->
    </div><!--//container-->
</section><!--//about-section-->

<section id="merch" class="merch-section section text-center">    
    <div class="container">
        <h2 class="section-title">Merch Store</h2>
        {% if Model.ContentItem.Content.Merchandises.ContentItems.size > 0 %}     
        <div class="row">
            {% for merch in Model.ContentItem.Content.Merchandises.ContentItems %}
            <div class="item col-12 col-md-6">
                <div class="item-inner">
                    <img class="img-fluid" src="{{ merch.Merchandise.Picture.Paths.first | asset_url }}" alt="">
                    <a class="mask" href="{{merch.Merchandise.Store.Url}}">
                        <span class="mask-inner">
                            <span class="item-title">{{merch.DisplayText}} ${{merch.Merchandise.Price.Value}}</span>
                            <span class="desc">{{merch.Merchandise.Description.Text}}</span>
                            <span class="btn btn-primary btn-cta">{{merch.Merchandise.Store.Text}}</span>
                        </span>
                    </a>
                </div><!--//item-inner-->
            </div>
            {% endfor %}           
        </div><!--//row-->        
        <div class="merch-action">
            <a class="btn btn-ghost-primary" href="{{Model.ContentItem.Content.LandingPage.MerchandisingStore.Url}}">
                {{Model.ContentItem.Content.LandingPage.MerchandisingStore.Text}}
            </a>
        </div>
        {% else %}
        <div class="sc-block ms-auto me-auto">           
            <div class="item">
                <h4 class="title">Premium Qualify and JEM branded Merchandising Coming Soon!!</h4>
            </div><!--//item-->            
        </div>
        {% endif %}
        
    </div><!--//container-->
    
</section><!--//merch-section-->

